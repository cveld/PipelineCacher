@page "/counter"
@inject HttpClient Http

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>Result: @result</p>

@code {
    private int currentCount = 0;
    string result = "<not yet executed>";

    private async Task IncrementCount()
    {
        currentCount++;
        result = await Http.GetStringAsync("api/Build");
        //var result = await Http.GetFromJsonAsync<string[]>("Json");
    }
}
