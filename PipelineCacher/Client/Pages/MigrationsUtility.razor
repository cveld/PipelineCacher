@page "/migrationsutility"
@using PipelineCacher.Client.Services
@inject IHttpClientFactory ClientFactory


<h3>Migrations Utility</h3>

<h4>Pending migrations</h4>
@if (pendingMigrations == null) {
    <div class="spinner-border spinner-border-sm" role="status">
        <span class="sr-only">Loading...</span>
    </div>
}
else {
    <ul>
        @foreach (var s in pendingMigrations)
        {
            <li>@s</li>    
        }
    </ul>
}

<button @onclick="ApplyMigrationsClicked" class="btn btn-primary">Apply migrations</button>

<p>
    @error
</p>
@code {
    string[] pendingMigrations = Array.Empty<string>();
    string error;
    HttpClient httpClient;

    protected override async Task OnInitializedAsync()
    {
        httpClient = ClientFactory.CreateClient(HttpClientNames.Anonymous);

        await Fetch();

    }

    async Task Fetch()
    {        
        try
        {           
            pendingMigrations = await httpClient.GetFromJsonAsync<string[]>("api/MigrationsUtility");
        } catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            throw ex;
        }        
    }

    async Task ApplyMigrationsClicked()
    {
        var result = await httpClient.PostAsync("api/MigrationsUtility/ApplyMigrations", null);
        if (result.IsSuccessStatusCode)
        {
            pendingMigrations = await result.Content.ReadFromJsonAsync<string[]>();
        }
        else
        {
            error = await result.Content.ReadAsStringAsync();
        }
    }
}
