@page "/profile"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using System.Security.Claims
@using PipelineCacher.Client.Models
@using PipelineCacher.Entities

@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserState UserState
@inject HttpClient Http  

<h3>Userstate</h3>
UserState.Test: @UserState.Test<br />
UserState.UserId: @UserState.User?.Id <br />

<h3>Profile</h3>

<AuthorizeView>
    <Authorized>
        Status: Logged in<br />
        Name: @context.User.Identity.Name<br />
    </Authorized>
    <NotAuthorized>
        Status: Not logged in
    </NotAuthorized>
</AuthorizeView>

<h3>Actions</h3>
<AuthorizeView>
    <Authorized>
        <button class="nav-link btn btn-link" @onclick="BeginLogout">Log out</button>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

<h3>ClaimsPrincipal Data</h3>

<button @onclick="GetClaimsPrincipalData" class="btn btn-primary m-md-4">Get ClaimsPrincipal Data</button>
<button @onclick="GetUserProfile" class="btn btn-primary m-md-4">Get user profile</button>

<p>@_authMessage</p>

@if (_claims.Count() > 0)
{
    <ul>
        @foreach (var claim in _claims)
        {
            <li>@claim.Type: @claim.Value</li>
        }
    </ul>
}

<p>@_surnameMessage</p>

<p>@UserprofileResult</p>

@code {
    private string UserprofileResult;
    private string _authMessage;
    private string _surnameMessage;
    private IEnumerable<Claim> _claims = Enumerable.Empty<Claim>();

    private async Task GetClaimsPrincipalData()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity.IsAuthenticated)
        {
            _authMessage = $"{user.Identity.Name} is authenticated.";
            _claims = user.Claims;
            _surnameMessage =
                $"Surname: {user.FindFirst(c => c.Type == ClaimTypes.Surname)?.Value}";
        }
        else
        {
            _authMessage = "The user is NOT authenticated.";
        }
    }

    private async Task BeginLogout(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }

    private async Task GetUserProfile()
    {
        var result = await Http.PostAsync($"api/UserProfile", null);
        var user = await result.Content.ReadFromJsonAsync<User>();
        UserprofileResult = user.ToString();


    }
}
