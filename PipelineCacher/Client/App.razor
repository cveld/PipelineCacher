@implements IDisposable
@using PipelineCacher.Client.Models
@inject AuthenticationStateProvider authenticationStateProvider
@inject UserState userState
@inject HttpClient Http
@using PipelineCacher.Shared

<CascadingAuthenticationState>
    <CascadingBlazoredModal>
        <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="true">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        @if (!context.User.Identity.IsAuthenticated)
                        {
                            <RedirectToLogin />
                            <p>NOT YET</p>
                        }
                        else
                        {
                            <p>You are not authorized to access this resource.</p>
                        }
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingBlazoredModal>
</CascadingAuthenticationState>

@code {
    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        if (task.IsCompletedSuccessfully)
        {
            var forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("WeatherForecast");
            userState.Test = forecasts.Length.ToString();
            var taskAwaited = await task;
            
            var user = (await task).User;
            
        }
    }

    protected override void OnInitialized()
    {
        userState.Test = "OnInitialized";
        Console.WriteLine("test");
        authenticationStateProvider.AuthenticationStateChanged += this.OnAuthenticationStateChanged;
    }

    void IDisposable.Dispose()
    {
        authenticationStateProvider.AuthenticationStateChanged -= this.OnAuthenticationStateChanged;
    }
}